---
import WavesT from "../WavesT.astro";
import WavesB from "../WavesB.astro";
import Title from "../Title.astro";

const mail = "cosmetica@jlomail.com";
const phone = "3871234567";
const instagram = "userjloinstagram";
---

<section id="nosotros" class="md:scroll-m-[-30px] 2xl:scroll-m-[-120px]">
  <WavesT color="#f768a1" />

  <article
    class="bg-[#f768a1] my-[-2px] flex flex-col md:flex-row md:gap-10 md:justify-evenly flex-wrap text-white text-pretty text-center justify-center overflow-hidden
    md:mt-[-80px] lg:mt-[-100px] xl:mt-[-150px] 2xl:mt-[-180px]"
  >
    <div class="flex flex-col gap-1 max-w-3xl xl:max-w-4xl text-pretty">
      <Title>NOSOTROS</Title>
      <p class="mx-4 p-4 md:text-lg lg:text-2xl">
        Con más de 20 años de experiencia en el rubro. Nos especializamos en el
        area. Y nuestro principal objetivo es garantizar la calidad de nuestros
        servicios. Trabajamos con los mejores productos y equipos de ultima
        tecnología.
      </p>
    </div>
    <div class="flex flex-col md:flex-row justify-evenly w-full">
      <div class="flex flex-col gap-1 text-pretty">
        <Title>DIRECCIÓN</Title>
        <p class="text-lg lg:text-xl">Av. Democracia 416 - B° El Huaico</p>
        <!-- DIV MAPA -->
        <div class="p-1 bg-white m-4 rounded-xl">
          <div
            id="map"
            class="map h-[250px] md:size-80 lg:size-96 xl:w-[450px] 2xl:w-[600px] w-full bg-white box-border rounded-xl z-0"
          >
          </div>
        </div>
      </div>
      <!-- FIN DIV MAPA -->
      <div
        class="flex flex-col gap-1 sm:max-w-[400px] lg:max-w-full text-pretty mx-auto md:mx-0"
      >
        <Title>CONTACTANOS</Title>
        <div
          class="flex flex-col my-5 md:my-auto items-center justify-center gap-2 md:gap-5 md:px-14 border border-pink-300 rounded-lg mx-5 py-5 px-10"
        >
          <a
            href=`mailto:${mail}`
            class="flex items-center justify-center gap-2 text-xl md:text-2xl lg:text-3xl"
          >
            <i class="text-2xl lg:text-3xl bx bxs-envelope"></i>
            <span>{mail}</span>
          </a>
          <a
            href=`tel:${phone}`
            class="flex items-center justify-center gap-2 text-xl md:text-2xl lg:text-3xl"
          >
            <i class="text-2xl bx bxs-phone-call lg:text-3xl"></i>
            <span>+54 {phone}</span>
          </a>
          <a
            href=`https://www.instagram.com/${instagram}/`
            class="flex items-center justify-center gap-2 text-xl lg:text-3xl"
            target="_blank"
          >
            <i class="text-2xl bx bxl-instagram-alt md:text-3xl lg:text-4xl"
            ></i>
            <span>@{instagram}</span>
          </a>
        </div>
      </div>
    </div>
  </article>
  <WavesB color="#f768a1" />
</section>
<script is:inline src="https://unpkg.com/leaflet@1.0.2/dist/leaflet.js"
></script>
<script>
  //Inicializa el mapa
  // @ts-ignore
  var map = L.map("map").setView(
    [-24.72389, -65.41916], //estas son las coordenadas de donde se va a centrar el mapa
    17
  ); //EL ultimo numero en este caso "13" es el zoom del mapa
  // @ts-ignore
  L.tileLayer("http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
    attribution:
      'Map &copy; <a href="http://openstreetmap.org">OpenStreetMap</a> - <a href="http://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery © <a href="http://cloudmade.com">CloudMade</a>',
    maxZoom: 19,
  }).addTo(map);

  //Personalizar marcador:
  // @ts-ignore
  var marcador = L.icon({
    iconUrl: "./assets/images/marcador.png",
    iconSize: [25, 60],
    popupAnchor: [0, -35],
  });
  // @ts-ignore
  var marker = L.marker([-24.72389, -65.41916], { icon: marcador }).addTo(map);
  //Añade PopUp
  marker.bindPopup(
    "<b>¡Nuestra ubicación!</b><br><a href='https://maps.app.goo.gl/3Y7MNbkUQvJDrHNT7' target='_blank'>Como llegar</a>"
  );

